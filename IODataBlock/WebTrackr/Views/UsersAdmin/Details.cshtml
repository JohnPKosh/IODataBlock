@section pageBreadcrumbSection
{
    <div class="container animate-panel">
        <div class="row">
            <div class="col-md-6 m-t-lg m-b-lg">
                <h5 class="font-bold text-uppercase text-success">@ViewBag.Title</h5>
                <p>Create a new account for access today.</p>
            </div>
            <div class="col-md-6">
                <div class="pull-right">
                    <ol class="breadcrumb">
                        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a></li>
                        <li>
                            <span>Users Admin</span>
                        </li>
                        <li class="active">
                            <span>Details</span>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
}

<section>
    <div class="content animate-panel">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="hpanel">
                        <div class="panel-body">
                            
                            <div>
                                <h4>User</h4>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </dt>
                                    <dd>
                                        @Html.DisplayFor(model => model.UserName)
                                    </dd>
                                </dl>
                            </div>
                        </div>
                    </div>

                    <div class="hpanel">
                        <div class="panel-body">

                            <h4>List of roles for this user</h4>
                            @if (ViewBag.RoleNames.Count == 0)
                            {
                                <hr />
                                <p>No roles found for this user.</p>
                            }

                            <table class="table">

                                @foreach (var item in ViewBag.RoleNames)
                                {
                                    <tr>
                                        <td>
                                            @item
                                        </td>
                                    </tr>
                                }
                            </table>
                            <p>
                                @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
                                @Html.ActionLink("Back to List", "Index")
                            </p>


                        </div>
                    </div>
                </div>
            </div>
                </div>
    </div>
</section>



@section pageBreadcrumbSection
{
    <div class="container animate-panel">
        <div class="row">
            <div class="col-md-6 m-t-lg m-b-lg">
                <h5 class="font-bold text-uppercase text-danger">@ViewBag.Title</h5>
                <p>Are you sure you want to delete this User?</p>
            </div>
            <div class="col-md-6">
                <div class="pull-right">
                    <ol class="breadcrumb">
                        <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-home"></i> Home</a></li>
                        <li>
                            <span>Users Admin</span>
                        </li>
                        <li class="active">
                            <span>Delete</span>
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
}

<section>
    <div class="content animate-panel">
        <div class="container">
            <div class="row">
                <div class="col-md-12">

                    @using (Html.BeginForm("Delete", "UsersAdmin", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })



                        <div class="hpanel">
                            <div class="panel-body">
                                <div class="text-center">
                                    <h4 class="text-danger">Delete User</h4>
                                    <hr />
                                </div>

                                <div class="form-group">
                                    <div class="col-md-2">
                                        @Html.DisplayNameFor(model => model.UserName)
                                    </div>
                                    <div class="col-md-10">
                                        <a href="mailto://@Html.DisplayFor(model => model.UserName)">@Html.DisplayFor(model => model.UserName)</a>
                                    </div>
                                </div>


                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <div class="pull-right m-l-md">
                                            <input type="submit" class="btn btn-danger" value="Submit" />
                                        </div>
                                        <div class="pull-right btn btn-default">
                                            @Html.ActionLink("Back to List", "Index")
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}







@model Sandbox3.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout_MVC.cshtml";
    ViewBag.Title = "Register Your API Account";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account for access today.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="panel panel-default">
        <div class="panel-heading">Registration Information</div>
        <div class="panel-body">
            <blockquote>
                <p>Enter the information supplied to you by your Broadvox Sales Rep below.</p>
                <footer>You would have received this info by e-mail.</footer>
            </blockquote>
            <div class="form-group">
                @Html.LabelFor(m => m.RegistrationCode, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.RegistrationCode, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ApiKey, new { @class = "col-md-2 control-label" })
                @Html.HiddenFor(m => m.ApiKey)
                <div class="col-md-10">
                    @Html.DisplayTextFor(m => m.ApiKey)
                </div>
            </div>
        </div>
    </div>

    <div class="panel panel-default">
        <div class="panel-heading">Account Information</div>
        <div class="panel-body">
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
        </div>
    </div>


}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
